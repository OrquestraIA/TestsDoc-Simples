{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2020"
        ],
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "tests/**/*",
        "pages/**/*",
        "fixtures/**/*",
        "utils/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
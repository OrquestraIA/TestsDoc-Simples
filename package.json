{
    "name": "doc-simples-tests",
    "version": "1.0.0",
    "description": "Testes automatizados para aplicação de gerenciamento de documentos usando Playwright",
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:report": "playwright show-report",
        "test:chromium": "playwright test --project=chromium",
        "test:firefox": "playwright test --project=firefox",
        "test:webkit": "playwright test --project=webkit",
        "test:dev": "dotenv -e .env.dev -- playwright test",
        "test:homolog": "dotenv -e .env.homolog -- playwright test",
        "test:prod": "dotenv -e .env.prod -- playwright test",
        "test:dev:ui": "dotenv -e .env.dev -- playwright test --ui",
        "test:homolog:ui": "dotenv -e .env.homolog -- playwright test --ui",
        "test:prod:ui": "dotenv -e .env.prod -- playwright test --ui",
        "report:custom": "ts-node scripts/generate-report.ts",
        "test:with-report": "npm test && npm run report:custom",
        "test:dev:report": "npm run test:dev && npm run report:custom custom-report-dev",
        "test:homolog:report": "npm run test:homolog && npm run report:custom custom-report-homolog",
        "test:prod:report": "npm run test:prod && npm run report:custom custom-report-prod"
    },
    "keywords": [
        "playwright",
        "e2e",
        "testing",
        "qa"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^20.10.0",
        "dotenv": "^16.3.1",
        "dotenv-cli": "^7.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}